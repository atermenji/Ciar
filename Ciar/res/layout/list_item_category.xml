<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout01"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_categories_category_height"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_category_logo"
        android:layout_width="@dimen/list_item_category_logo_size"
        android:layout_height="@dimen/list_item_category_logo_size"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dip"
        android:src="@drawable/ic_stub_category" />

    <TextView
        android:id="@+id/tv_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_category_logo"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_large" />

    <CheckBox
        android:id="@+id/cb_category_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:focusable="false" />

</RelativeLayout>