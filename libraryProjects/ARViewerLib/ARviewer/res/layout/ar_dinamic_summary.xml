<?xml version="1.0" encoding="utf-8"?>
   
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/ar_box"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="120dip"
    android:paddingRight="120dip"
    android:paddingTop="200dip"
    >
<android.gesture.GestureOverlayView xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/ar_gestures"
	android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
        
    android:uncertainGestureColor="#00000000"
    android:gestureColor="#00000000"
    
    android:gestureStrokeLengthThreshold="4.0"
    
    android:gestureStrokeType="multiple"
    android:eventsInterceptionEnabled="true"
    android:orientation="vertical">
    
<RelativeLayout
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
 	>
 	
<Button
	android:id="@+id/ar_button_left"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_alignParentLeft="true"
	android:layout_centerVertical="true"
	android:background="@drawable/left_button_wbg"
	>
</Button>
 	
<RelativeLayout
	android:id="@+id/ar_container"
	android:layout_width="wrap_content"
	android:layout_height="fill_parent"
	android:layout_toRightOf="@+id/ar_button_left"
	android:layout_toLeftOf="@+id/ar_button_right"
	android:orientation="vertical"
    android:layout_margin="1dip"
    android:padding="5dip"
    android:background="@drawable/label_back_v"
 	>

	<RelativeLayout 
		android:id="@+id/ar_container2"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:orientation="horizontal">
		<Button
			android:id="@+id/ar_button_details"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="5dip"
			android:layout_alignParentLeft="true"
			android:visibility="invisible"
			android:background="@drawable/bmagnif"
		>
		</Button>
		<Button
			android:id="@+id/ar_button_close"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:background="@drawable/bclose"
		>
		</Button>
		<LinearLayout
			android:id="@+id/ar_media_player"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:layout_toRightOf="@+id/ar_button_details"
			android:layout_toLeftOf="@+id/ar_button_close"
			android:gravity="center"
			android:orientation="horizontal">
			<Button
				android:id="@+id/ar_button_play"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="1dip"
				android:background="@drawable/bplay"
			>
			</Button>
			<Button
				android:id="@+id/ar_button_stop"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="1dip"
				android:background="@drawable/bstop"
			>
			</Button>
		</LinearLayout>
	</RelativeLayout>
	
	<ScrollView
		android:layout_height="fill_parent" 
		android:layout_width="fill_parent"
		android:layout_below="@+id/ar_container2"
		android:layout_above="@+id/ar_button_remove">
		
 	<LinearLayout
 		android:layout_width="fill_parent"
 		android:layout_height="wrap_content"
 		android:orientation="vertical"
 		
 		>
	<ImageView 
		android:id="@+id/ar_image"
		android:layout_gravity="center"
		android:paddingTop="5dip"
		android:layout_width="wrap_content"
	    android:layout_height="100dip"
	    android:maxWidth="150dip"
	    android:maxHeight="100dip"
	    /> 
	<TextView
	    	android:id="@+id/ar_distance"
			android:paddingTop="5dip"
	 		android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" 
		    android:textSize="12dip"
	    	android:textStyle="bold"
		    android:maxLines="1"
		    android:textColor="#000000"
		    />  
		    
		<TextView
	    	android:id="@+id/ar_body"
			android:paddingTop="5dip"
	 		android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" 
		    android:textSize="12dip"
		    android:maxLines="5"
		    android:textColor="#000000"
		    />
	</LinearLayout>
	</ScrollView>
	<Button
		android:id="@+id/ar_button_remove"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true"
		android:visibility="invisible"
		android:background="@drawable/bremove"
	>
	</Button>
</RelativeLayout>

<Button
	android:id="@+id/ar_button_right"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_alignParentRight="true"
	android:layout_centerVertical="true"
	android:background="@drawable/right_button_wbg"
	>
</Button>
 	
<TextView
   	android:id="@+id/ar_dinamic_pagemark"
	android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:visibility="gone"
    />
</RelativeLayout>
</android.gesture.GestureOverlayView>
</LinearLayout>